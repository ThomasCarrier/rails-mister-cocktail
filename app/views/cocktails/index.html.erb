<div class="row">

  <h1>Cocktails</h1>
  <div class="flex-container text-center">
    <% @cocktails.each do |c| %>
    <div class="card flex-item ">
      <li>
        <h3><%= link_to "#{c.name}", cocktail_path(c) %></h3>
        <div><% if c.photo? %>
        <%= cl_image_tag c.photo.path, width: 100, height: 100, crop: "fill", gravity: "auto" %>
        <% end %>
        </div>
        <%= link_to "Put aside", cocktail_path(c), method: :delete %>
      </li>
    </div>
    <% end %>
    <hr>
  </div>
  <p><%= link_to "Add a cocktail", new_cocktail_path %></p>
</div>
