<div class="row">
  <div class="text-center">
    <h1>Cocktails</h1>

    <% @cocktails.each do |c| %>
    <h3><%= link_to "#{c.name}", cocktail_path(c) %></h3>
    <p><%= link_to "Effacer", cocktail_path(c), method: :delete %></p>
    <% end %>
    <p><%= link_to "Add a cocktail", new_cocktail_path %></p>
  </div>
</div>
